<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>Persons</title>
		<link rel="stylesheet" href="/styles/styles.css" type="text/css" />
	</head>

	<body>
		<section class="section">
			<div class="title-wrapper">
				<h2 class="title">All customers</h2>
			</div>

			<div class="section-center">
				<table>
					<thead>
						<tr>
							<th>customerId</th>
							<th>firstname</th>
							<th>lastname</th>
							<th>favoriteIceCream</th>
							<th>customerClass</th>
						</tr>
					</thead>
					<tbody>
						<% result.forEach(person => { %>
						<tr>
							<td>
								<a href="/customer/<%= person.customerId %>">
									<%= person.customerId %>
								</a>
								<!-- <%= person.customerId %> -->
							</td>
							<td><%= person.firstname %></td>
							<td><%= person.lastname %></td>
							<td><%= person.favoriteIceCream %></td>
							<td><%= person.customerClass %></td>
						</tr>
						<% }); %>
					</tbody>
				</table>
				<a href="/"><button class="btn">Menu</button></a>
			</div>
		</section>
	</body>
</html>
